inherit gnome2

DESCRIPTION="GNOME web browser"

PATCH_URI="
	2.22-implib.patch
	2.22-gtk-doc.patch
"

PKG_NAMES="${PN} ${PN}-devel"
epiphany_CONTENTS="--exclude=aclocal --exclude=gtk-doc --exclude=pygtk
                   etc/ usr/bin/ usr/share/"
epiphany_devel_CONTENTS="usr/include/ usr/lib/ usr/share/aclocal/
                         usr/share/gtk-doc/ usr/share/pygtk/"

CYGCONF_ARGS="
	--with-engine=webkit
	--disable-network-manager
	--disable-zeroconf
"
